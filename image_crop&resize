#Cropping
#crop an image from x=0,y=0 position to h=100,w=200
import numpy as np
import cv2

image = cv2.imread('image.jpg')
y=0
x=0
h=100
w=200
crop = image[y:y+h, x:x+w]
cv2.imshow('Cropped_Image', crop)
cv2.waitKey(0) 


#Resizing
#INTER_CUBIC - a bicubic interpolation over 4x4 pixel neighborhood

cv2.resize(Cropped_Image,dsize[, dst[, fx[, fy[, INTER_CUBIC]]]])
