#Cropping
#crop an image from x=0,y=0 position to h=100,w=200

import numpy as np
import cv2
def cropresizeimage(image, list):
  x1 = list[0]
  y1 = list[1]
  x2 = list[2]
  y2 = list[3]
  w = list[4]
  h = list[5]
  crop = image[y1:y2, x1:x2]
  
#Resizing
#INTER_CUBIC - a bicubic interpolation over 4x4 pixel neighborhood
  
  dim = (w,h)
  new_image = cv2.resize(crop, dim, interpolation =cv2.INTER_CUBIC)
  return new_image
